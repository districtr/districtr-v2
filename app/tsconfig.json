{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/app/components/*"],
      "@api/*": ["./src/app/api/*"],
      "@constants/*": ["./src/app/constants/*"],
      "@store/*": ["./src/app/store/*"],
      "@utils/*": ["./src/app/utils/*"]
    },
    "target": "ES6"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/components/Picker.jsx",
    "src/app/page.jsx",
    "src/app/api/apiHandlers.test.js",
    "src/app/components/sidebar/MapModeSelector.jsx",
  ],
  "exclude": ["node_modules"]
}
